                <MenuItem Header="Save As..." IsEnabled="False" x:Name="SaveAs"/>
                <Separator/>
                <MenuItem Header="E_xit (X)"/>
            </MenuItem>
            <MenuItem Header="_Edit (E)">
                
            </MenuItem>
        </Menu>
        <Panel></Panel>
    </DockPanel>
</Window>